<Principal>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    ScrollView:
        BoxLayout:
            id: clientes
            orientation: 'vertical'
            size_hint_y: None
            # Scrool de tela, tamanho minimo, quando inserir dados ele aparecerá e aumentará
            height: self.minimum_height

    BoxLayout:
        size_hint_y: None # Quer dizer que no eixo Y não terá nada
        height: "40dp"

        Label:
            text: "Nome"
        TextInput:
            id: nome
        Label:
            text: "Idade"
        TextInput:
            id: idade


    BoxLayout:
        size_hint_y: None
        height:  "40dp"
        Button:
            text: "Cadastrar"
            size_hint_x: 15
            on_release: root.cadastrar_cliente()
        Button:
            text: "Remover"
            size_hint_x: 15
        Button:
            text: "Editar"
            size_hint_x: 15